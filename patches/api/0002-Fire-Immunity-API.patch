diff --git a/src/main/java/org/bukkit/entity/Entity.java b/src/main/java/org/bukkit/entity/Entity.java
index be7ad89699619aba9df4699403c9a70fd2bc9da1..0fca09dd46f5c0e0943aeca759ffc9a659f7fe4b 100644
--- a/src/main/java/org/bukkit/entity/Entity.java
+++ b/src/main/java/org/bukkit/entity/Entity.java
@@ -984,4 +984,20 @@ public interface Entity extends Metadatable, CommandSender, Nameable, Persistent
      */
     boolean isInDaylight();
     // Purpur end
+
+    // Tentacles start
+
+    /**
+     * Checks if the entity is fire immune
+     *
+     * @return True if fire immune
+     */
+    boolean isImmuneToFire();
+
+    /**
+     * Sets if the entity is fire immune
+     * Set this to null to restore the entity type default
+     */
+    void setImmuneToFire(@Nullable Boolean fireImmune);
+    // Tentacles end
 }
diff --git a/src/main/java/org/bukkit/entity/Item.java b/src/main/java/org/bukkit/entity/Item.java
